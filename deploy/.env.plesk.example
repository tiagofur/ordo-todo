# =============================================================================
# Ordo-Todo Environment Variables for Plesk Deployment
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
DOMAIN=ordotodo.app

# -----------------------------------------------------------------------------
# GitHub Container Registry
# -----------------------------------------------------------------------------
GITHUB_REPOSITORY_OWNER=tiagofur
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# Database
# Generate password with: openssl rand -base64 24 | tr -dc 'a-zA-Z0-9' | head -c 32
# -----------------------------------------------------------------------------
POSTGRES_USER=ordo_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=ordo_todo_prod

# -----------------------------------------------------------------------------
# Backend JWT Secrets
# Generate with: openssl rand -base64 64
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# -----------------------------------------------------------------------------
# NextAuth Secret
# Generate with: openssl rand -base64 32
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL

# -----------------------------------------------------------------------------
# AI (Optional)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=
