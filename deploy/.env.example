# =============================================================================
# Ordo-Todo Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
DOMAIN=ordotodo.app
ACME_EMAIL=tu-email@example.com

# -----------------------------------------------------------------------------
# GitHub Container Registry
# -----------------------------------------------------------------------------
GITHUB_REPOSITORY_OWNER=tiagofur
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=ordo_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD_32_CHARS
POSTGRES_DB=ordo_todo_prod

# -----------------------------------------------------------------------------
# Backend JWT Secrets (generate with: openssl rand -base64 64)
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# -----------------------------------------------------------------------------
# NextAuth Secret (generate with: openssl rand -base64 32)
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET=CHANGE_THIS_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# -----------------------------------------------------------------------------
# Traefik Dashboard (generate with: htpasswd -nb admin password)
# Escape $ with $$ in docker-compose
# Example: admin:$$apr1$$xxxxx
# -----------------------------------------------------------------------------
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$ruca84Hq$$mbjdMZBAG.KWn7vfN/SNK/

# -----------------------------------------------------------------------------
# AI (Optional)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_RETENTION_DAYS=30
