{
  "name": "ordo-todo",
  "private": true,
  "description": "The Modern Task Organization Platform - DDD + Clean Architecture Monorepo",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:desktop": "npm run dev --workspace=@ordo-todo/desktop",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "react-native-web": "^0.21.2",
    "react-test-renderer": "^19.2.3",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "body-parser": "^1.20.3",
    "express": "^4.21.2",
    "cookie": "^0.7.2",
    "cross-spawn": "^7.0.6",
    "semver": "^7.6.3",
    "send": "^0.19.0",
    "serve-static": "^1.16.2",
    "path-to-regexp": "^0.1.12",
    "micromatch": "^4.0.8",
    "xmldom": "npm:@xmldom/xmldom@^0.8.10",
    "plist": "^3.1.0",
    "qs": "^6.14.0",
    "form-data": "^4.0.0",
    "tough-cookie": "^4.1.3",
    "esbuild": "^0.25.0"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "webpage/*"
  ],
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "immer": "^11.1.3",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rxjs": "^7.8.1"
  }
}
