{
  "name": "@ordo-todo/hooks",
  "version": "1.0.0",
  "description": "Shared React Query hooks for Ordo-Todo applications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./use-username-validation": {
      "types": "./dist/use-username-validation.d.ts",
      "import": "./dist/use-username-validation.js",
      "require": "./dist/use-username-validation.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "ordo-todo",
    "hooks",
    "react-query",
    "typescript"
  ],
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@ordo-todo/api-client": "*",
    "@ordo-todo/core": "*",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@ordo-todo/typescript-config": "*",
    "@tanstack/react-query": "^5.80.7",
    "@types/lodash": "^4.17.0",
    "@types/react": "^19.1.8",
    "react": "^19.1.0",
    "typescript": "^5.9.3"
  }
}
