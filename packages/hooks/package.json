{
  "name": "@ordo-todo/hooks",
  "version": "1.0.0",
  "description": "Shared React Query hooks for Ordo-Todo applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./use-username-validation": {
      "types": "./dist/use-username-validation.d.ts",
      "import": "./dist/use-username-validation.mjs",
      "require": "./dist/use-username-validation.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ordo-todo",
    "hooks",
    "react-query",
    "typescript"
  ],
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@ordo-todo/api-client": "*",
    "@ordo-todo/core": "*",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@ordo-todo/typescript-config": "*",
    "@tanstack/react-query": "^5.90.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.8",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "react": "^19.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
