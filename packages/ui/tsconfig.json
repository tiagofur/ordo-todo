{
  "extends": "@ordo-todo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [],
    "strict": false
  },
  "include": [
    "src/**/*",
    "src/types/lucide-react.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/stories/**/*"
  ]
}