{
  "name": "@ordo-todo/ui",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared UI components, utilities and constants for Ordo-Todo applications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "ordo-todo",
    "ui",
    "components",
    "utilities",
    "tailwind",
    "react",
    "typescript"
  ],
  "dependencies": {
    "@ordo-todo/core": "*",
    "@ordo-todo/api-client": "*",
    "@ordo-todo/hooks": "*",
    "@ordo-todo/stores": "*",
    "@ordo-todo/i18n": "*",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.23.25",
    "recharts": "^3.5.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "react-big-calendar": "^1.19.4",
    "sonner": "^1.7.2",
    "lucide-react": "^0.469.0",
    "date-fns": "^4.1.0",
    "chrono-node": "^2.7.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.1.7",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.4",
    "react-hook-form": "^7.54.2",
    "zod": "^3.24.1",
    "@hookform/resolvers": "^5.2.2"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@tanstack/react-query": "^5.0.0"
  },
  "devDependencies": {
    "@ordo-todo/typescript-config": "*",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/react-big-calendar": "^1.13.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitejs/plugin-react": "^4.3.4",
    "vitest": "^3.0.7",
    "@vitest/ui": "^3.0.7",
    "typescript": "^5.9.3",
    "storybook": "^10.1.4",
    "@storybook/react-vite": "^10.1.4",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.4",
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/addon-onboarding": "^10.1.4",
    "playwright": "^1.57.0",
    "@vitest/browser": "^3.0.7",
    "@vitest/coverage-v8": "^3.0.7"
  }
}
