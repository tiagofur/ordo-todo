{
  "name": "@ordo-todo/core",
  "version": "0.1.0",
  "private": true,
  "description": "Domain-Driven Design core with entities, value objects, and use cases",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --minify",
    "test": "jest --watchAll --collectCoverage",
    "test:ci": "jest --coverage"
  },
  "devDependencies": {
    "@ordo-todo/eslint-config": "*",
    "@ordo-todo/typescript-config": "*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/uuid": "^8.3.2",
    "bundle-require": "^5.1.0",
    "cac": "^6.7.14",
    "eslint": "^9.39.2",
    "fix-dts-default-cjs-exports": "^1.0.1",
    "jest": "^30.2.0",
    "joycon": "^3.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "uuid": "^8.3.2",
    "zod": "^3.25.76"
  }
}
