{
  "name": "@ordo-todo/api-client",
  "version": "1.1.0",
  "description": "Shared API client for Ordo-Todo applications (Web, Mobile, Desktop)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ordo-todo",
    "api-client",
    "rest-api",
    "typescript"
  ],
  "dependencies": {
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "@ordo-todo/typescript-config": "*",
    "typescript": "^5.9.3",
    "vitest": "^3.0.7",
    "@vitest/coverage-v8": "^3.0.7"
  }
}
