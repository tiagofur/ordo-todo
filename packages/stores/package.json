{
  "name": "@ordo-todo/stores",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared Zustand stores for Ordo-Todo applications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ordo-todo",
    "stores",
    "zustand",
    "typescript"
  ],
  "peerDependencies": {
    "zustand": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@ordo-todo/typescript-config": "*",
    "@vitest/coverage-v8": "^3.0.7",
    "jsdom": "^26.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.7",
    "zustand": "^5.0.5"
  }
}
