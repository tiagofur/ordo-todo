{
  "name": "@ordo-todo/styles",
  "version": "1.0.0",
  "description": "Shared CSS styles, Tailwind theme, and design tokens for Ordo-Todo",
  "main": "./src/index.css",
  "types": "./src/tokens.ts",
  "exports": {
    ".": "./src/index.css",
    "./src/index.css": "./src/index.css",
    "./src/variables.css": "./src/variables.css",
    "./src/theme.css": "./src/theme.css",
    "./src/base.css": "./src/base.css",
    "./src/components.css": "./src/components.css",
    "./variables": "./src/variables.css",
    "./theme": "./src/theme.css",
    "./base": "./src/base.css",
    "./components": "./src/components.css",
    "./tokens": {
      "types": "./src/tokens.ts",
      "import": "./src/tokens.ts",
      "require": "./src/tokens.ts"
    },
    "./src/tokens": {
      "types": "./src/tokens.ts",
      "import": "./src/tokens.ts",
      "require": "./src/tokens.ts"
    }
  },
  "files": [
    "src"
  ],
  "keywords": [
    "ordo-todo",
    "styles",
    "tailwind",
    "css",
    "tokens",
    "react-native"
  ],
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  }
}
