---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import Button from '../ui/Button.astro';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section class="py-20 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl font-bold mb-4">
      Ready to Transform Your Productivity?
    </h2>
    <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
      Join thousands of teams already using Ordo-Todo to achieve more while maintaining work-life balance.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <Button 
        href={getRelativeLocaleUrl(currentLang, '/pricing')}
        variant="secondary"
        size="lg"
        class="bg-white text-blue-600 hover:bg-gray-100"
      >
        Start Free Trial
      </Button>
      <Button 
        href="#demo"
        variant="outline"
        size="lg"
        class="border-white text-white hover:bg-white hover:text-blue-600"
      >
        Schedule Demo
      </Button>
    </div>
    
    <div class="mt-12 flex flex-wrap justify-center gap-8 text-sm">
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>No credit card required</span>
      </div>
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>14-day free trial</span>
      </div>
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>Cancel anytime</span>
      </div>
    </div>
  </div>
</section>