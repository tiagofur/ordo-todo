---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import Button from '../ui/Button.astro';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section id="demo" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t('demo.title')}
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {t('demo.description')}
      </p>
    </div>

    <!-- Interactive Demo Area -->
    <div class="max-w-5xl mx-auto">
      <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-8 shadow-xl">
        <!-- Demo Tabs -->
        <div class="flex flex-wrap gap-2 mb-8">
          <button class="demo-tab active px-4 py-2 rounded-lg font-medium transition-colors bg-blue-600 text-white" data-tab="task-creation">
            Task Creation
          </button>
          <button class="demo-tab px-4 py-2 rounded-lg font-medium transition-colors bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300" data-tab="ai-assistant">
            AI Assistant
          </button>
          <button class="demo-tab px-4 py-2 rounded-lg font-medium transition-colors bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300" data-tab="analytics">
            Analytics
          </button>
          <button class="demo-tab px-4 py-2 rounded-lg font-medium transition-colors bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300" data-tab="collaboration">
            Team Sync
          </button>
        </div>

        <!-- Demo Content -->
        <div class="demo-content">
          <!-- Task Creation Demo -->
          <div id="task-creation" class="demo-panel">
            <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-inner">
              <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Create a new task using natural language
                </label>
                <input 
                  type="text" 
                  placeholder="e.g., 'Review Q4 report tomorrow at 2pm #urgent @marketing'"
                  class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-800"
                />
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div class="p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                  <div class="text-sm text-gray-600 dark:text-gray-400">Task Title</div>
                  <div class="font-medium text-gray-900 dark:text-white">Review Q4 Report</div>
                </div>
                <div class="p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                  <div class="text-sm text-gray-600 dark:text-gray-400">Due Date</div>
                  <div class="font-medium text-gray-900 dark:text-white">Tomorrow, 2:00 PM</div>
                </div>
                <div class="p-3 bg-purple-50 dark:bg-purple-900/20 rounded-lg">
                  <div class="text-sm text-gray-600 dark:text-gray-400">Priority</div>
                  <div class="font-medium text-gray-900 dark:text-white">Urgent</div>
                </div>
              </div>
              
              <Button class="w-full">
                Create Task
              </Button>
            </div>
          </div>

          <!-- AI Assistant Demo -->
          <div id="ai-assistant" class="demo-panel hidden">
            <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-inner">
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                      <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                    </svg>
                  </div>
                  <div class="flex-1 bg-gray-100 dark:bg-gray-800 rounded-lg p-4">
                    <p class="text-gray-900 dark:text-white">
                      Based on your productivity patterns, I suggest scheduling your deep work tasks between 9-11 AM. You're 40% more focused during this time.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-3">
                  <div class="w-8 h-8 bg-gray-300 dark:bg-gray-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <div class="flex-1 bg-blue-100 dark:bg-blue-900/20 rounded-lg p-4">
                    <p class="text-gray-900 dark:text-white">
                      Thanks! I'll block that time for important tasks.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-3">
                  <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                      <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                    </svg>
                  </div>
                  <div class="flex-1 bg-gray-100 dark:bg-gray-800 rounded-lg p-4">
                    <p class="text-gray-900 dark:text-white">
                      Perfect! I've also noticed you haven't taken a break in 3 hours. Would you like me to schedule a 15-minute break?
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Analytics Demo -->
          <div id="analytics" class="demo-panel hidden">
            <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-inner">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white mb-4">Weekly Overview</h4>
                  <div class="space-y-3">
                    <div class="flex justify-between items-center">
                      <span class="text-sm text-gray-600 dark:text-gray-400">Tasks Completed</span>
                      <span class="font-semibold text-gray-900 dark:text-white">47</span>
                    </div>
                    <div class="flex justify-between items-center">
                      <span class="text-sm text-gray-600 dark:text-gray-400">Focus Score</span>
                      <span class="font-semibold text-green-600">87%</span>
                    </div>
                    <div class="flex justify-between items-center">
                      <span class="text-sm text-gray-600 dark:text-gray-400">Pomodoros</span>
                      <span class="font-semibold text-gray-900 dark:text-white">23</span>
                    </div>
                  </div>
                </div>
                
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white mb-4">Productivity Heatmap</h4>
                  <div class="grid grid-cols-7 gap-1">
                    {[...Array(35)].map((_, i) => {
                      const intensity = Math.random();
                      const bgColor = intensity > 0.7 ? 'bg-green-500' : 
                                     intensity > 0.4 ? 'bg-green-300' : 
                                     intensity > 0.2 ? 'bg-green-200' : 'bg-gray-200';
                      return (
                        <div key={i} class={`w-6 h-6 rounded-sm ${bgColor}`}></div>
                      );
                    })}
                  </div>
                  <div class="flex justify-between text-xs text-gray-500 mt-2">
                    <span>Mon</span>
                    <span>Sun</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Collaboration Demo -->
          <div id="collaboration" class="demo-panel hidden">
            <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-inner">
              <div class="space-y-4">
                <div class="flex items-center space-x-3 p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                  <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                  <span class="text-sm text-gray-700 dark:text-gray-300">Sarah is editing "Marketing Strategy"</span>
                </div>
                
                <div class="flex items-center space-x-3 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                  <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                  <span class="text-sm text-gray-700 dark:text-gray-300">Mike completed "Q4 Budget Review"</span>
                </div>
                
                <div class="flex items-center space-x-3 p-3 bg-purple-50 dark:bg-purple-900/20 rounded-lg">
                  <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                  <span class="text-sm text-gray-700 dark:text-gray-300">New comment on "Product Launch"</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <Button 
        href={getRelativeLocaleUrl(currentLang, '/pricing')}
        variant="primary"
        size="lg"
      >
        {t('demo.button')}
      </Button>
    </div>
  </div>
</section>

<script>
  // Tab switching functionality
  const tabs = document.querySelectorAll('.demo-tab');
  const panels = document.querySelectorAll('.demo-panel');
  
  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const targetId = tab.dataset.tab;
      
      // Update tab styles
      tabs.forEach(t => {
        t.classList.remove('bg-blue-600', 'text-white');
        t.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
      });
      tab.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-300');
      tab.classList.add('bg-blue-600', 'text-white');
      
      // Show/hide panels
      panels.forEach(panel => {
        if (panel.id === targetId) {
          panel.classList.remove('hidden');
        } else {
          panel.classList.add('hidden');
        }
      });
    });
  });
</script>