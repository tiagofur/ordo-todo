---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import Button from '../ui/Button.astro';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

// Hero content by language
const heroContent = {
  en: {
    badge: 'NEW: AI Meeting Assistant',
    title: 'The AI-Powered Task Manager That Works For You',
    subtitle: 'Transform your productivity with intelligent task management, smart scheduling, and proactive wellbeing insights',
    ctaPrimary: 'Start Free Trial',
    ctaSecondary: 'Watch Demo'
  },
  es: {
    badge: 'NUEVO: Asistente de Reuniones con IA',
    title: 'El Gestor de Tareas con IA que Trabaja para Ti',
    subtitle: 'Transforma tu productividad con gestión inteligente de tareas, programación inteligente y insights proactivos de bienestar',
    ctaPrimary: 'Comenzar Prueba Gratis',
    ctaSecondary: 'Ver Demo'
  },
  'pt-br': {
    badge: 'NOVO: Assistente de Reuniões com IA',
    title: 'O Gerenciador de Tarefas com IA que Trabalha por Você',
    subtitle: 'Transforme sua produtividade com gerenciamento inteligente de tarefas, agendamento inteligente e insights proativos de bem-estar',
    ctaPrimary: 'Começar Teste Grátis',
    ctaSecondary: 'Ver Demo'
  }
};

const content = heroContent[currentLang] || heroContent.en;
---

<section class="relative overflow-hidden bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-purple-100 via-blue-50 to-white dark:from-purple-900/40 dark:via-gray-900 dark:to-gray-900">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.05]" style="background-image: radial-gradient(#6366f1 1px, transparent 1px); background-size: 32px 32px;"></div>
  
  <!-- Glowing Orbs -->
  <div class="absolute top-0 right-0 -mt-20 -mr-20 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
  <div class="absolute top-0 left-0 -mt-20 -ml-20 w-80 h-80 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>

  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16 sm:pt-24 sm:pb-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left">
      <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 mb-6">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        {content.badge}
      </div>
      
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6">
        {content.title}
      </h1>
      
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl">
        {content.subtitle}
      </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <Button 
            href={getRelativeLocaleUrl(currentLang, '/pricing')}
            variant="primary"
            size="lg"
          >
            {content.ctaPrimary}
          </Button>
          <Button 
            href="#demo"
            variant="secondary"
            size="lg"
          >
            {content.ctaSecondary}
          </Button>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 mt-12">
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-gray-900 dark:text-white">10K+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Active Users</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-gray-900 dark:text-white">500K+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Tasks Completed</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-gray-900 dark:text-white">99.9%</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Uptime</div>
          </div>
        </div>
      </div>

      <!-- Demo Mockup -->
      <div class="relative">
        <div class="relative bg-white dark:bg-gray-800 rounded-2xl shadow-2xl overflow-hidden">
          <div class="absolute top-0 left-0 right-0 h-8 bg-gray-100 dark:bg-gray-700 flex items-center px-4">
            <div class="flex space-x-2">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
          </div>
          <div class="pt-8 p-6">
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4"></div>
                  <div class="h-3 bg-gray-100 dark:bg-gray-800 rounded w-1/2 mt-2"></div>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-2/3"></div>
                  <div class="h-3 bg-gray-100 dark:bg-gray-800 rounded w-1/3 mt-2"></div>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                    <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
                  <div class="h-3 bg-gray-100 dark:bg-gray-800 rounded w-2/3 mt-2"></div>
                </div>
              </div>
            </div>
            
            <!-- AI Assistant Mockup -->
            <div class="mt-6 p-4 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
              <div class="flex items-center space-x-2 mb-2">
                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Ordo AI Assistant</span>
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                "I've organized your tasks for today based on your energy patterns. Start with 'Review Q4 Report' at 9 AM for optimal focus."
              </div>
            </div>
          </div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-blue-200 dark:bg-blue-800 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-purple-200 dark:bg-purple-800 rounded-full opacity-20 animate-pulse"></div>
      </div>
    </div>
  </div>
</section>