---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getCollection } from 'astro:content';
import Card from '../ui/Card.astro';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const testimonials = await getCollection('testimonials');
---

<section class="py-20 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t('testimonials.title')}
      </h2>
      <div class="flex items-center justify-center space-x-4 mb-8">
        <div class="flex items-center">
          {[...Array(5)].map((_, i) => (
            <svg key={i} class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        <span class="text-lg text-gray-600 dark:text-gray-300">4.9/5 from 2,000+ reviews</span>
      </div>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <Card hover={true} class="h-full">
          <div class="flex items-center mb-4">
            <img 
              src={testimonial.data.avatar || `https://api.dicebear.com/7.x/avataaars/svg?seed=${testimonial.data.name}`}
              alt={testimonial.data.name}
              class="w-12 h-12 rounded-full mr-4"
            />
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white">{testimonial.data.name}</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                {testimonial.data.role} at {testimonial.data.company}
              </p>
            </div>
          </div>
          
          <div class="flex mb-3">
            {[...Array(testimonial.data.rating)].map((_, i) => (
              <svg key={i} class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          
          <blockquote class="text-gray-700 dark:text-gray-300 italic">
            "{testimonial.data.content}"
          </blockquote>
        </Card>
      ))}
    </div>

    <!-- Additional Stats -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8">
      <div class="text-center">
        <div class="text-3xl font-bold text-blue-600 mb-2">40%</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Productivity Increase</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-green-600 mb-2">25%</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Faster Project Delivery</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-purple-600 mb-2">60%</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Less Time in Meetings</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-orange-600 mb-2">85%</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Better Work-Life Balance</div>
      </div>
    </div>
  </div>
</section>