# Application
NODE_ENV=development
PORT=3101
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ordo_todo"

# JWT
JWT_SECRET=your-secret-key-change-in-production-min-32-characters
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGINS=http://localhost:3100,http://localhost:3000,http://localhost:8081,exp://

# Logging
LOG_LEVEL=debug

# AI Features (optional - features work without it using fallbacks)
GEMINI_API_KEY=your-gemini-api-key-from-ai-studio

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3101/api/v1/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3101/api/v1/auth/github/callback

# Frontend URL for OAuth redirect
FRONTEND_URL=http://localhost:3000
