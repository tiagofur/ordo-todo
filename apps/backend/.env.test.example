# Test Environment Configuration
# Copy this to .env.test for local testing

NODE_ENV=test
PORT=3001
API_PREFIX=api

# Database (matches docker-compose.test.yml)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ordo_todo_test"

# JWT
JWT_SECRET=ci-jwt-secret-that-is-at-least-32-characters-long
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=error
