{
  "name": "@ordo-todo/desktop",
  "version": "1.0.0",
  "type": "module",
  "description": "Ordo-Todo Desktop Application - Modern Task & Pomodoro Management",
  "author": {
    "name": "Ordo-Todo Team",
    "email": "support@ordo-todo.app"
  },
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "start": "vite build && electron .",
    "build": "tsc && vite build && electron-builder --publish never",
    "build:vite": "vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "postinstall": "echo 'Desktop app dependencies installed'",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate-icons && echo 'Building Ordo-Todo Desktop...'",
    "clean": "rimraf dist dist-electron",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "eslint . --ext .ts,.tsx",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "build:analyze": "ANALYZE_BUNDLE=true npm run build:vite",
    "build:report": "ANALYZE_BUNDLE=true npm run build:vite -- --mode production",
    "analyze:bundle": "node scripts/analyze-bundle.mjs",
    "bundle:check": "npm run build && npm run analyze:bundle"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@electron/remote": "^2.1.3",
    "@hello-pangea/dnd": "^18.0.1",
    "@ordo-todo/api-client": "*",
    "@ordo-todo/config": "*",
    "@ordo-todo/core": "*",
    "@ordo-todo/hooks": "*",
    "@ordo-todo/i18n": "*",
    "@ordo-todo/stores": "*",
    "@ordo-todo/styles": "*",
    "@ordo-todo/ui": "*",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query": "^5.90.11",
    "@types/react-big-calendar": "^1.16.3",
    "better-sqlite3": "^12.5.0",
    "chrono-node": "^2.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.25",
    "i18next": "^25.7.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.555.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-big-calendar": "^1.19.4",
    "react-day-picker": "^9.11.2",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.1",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^7.1.3",
    "recharts": "^3.5.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "39.2.4",
    "electron-builder": "^26.0.12",
    "electron-builder-notarize": "^1.5.2",
    "globals": "^15.12.0",
    "icon-gen": "^5.0.0",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.1",
    "rimraf": "^6.1.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.15",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.ordo-todo.desktop",
    "productName": "Ordo-Todo",
    "copyright": "Copyright Â© 2025 Ordo-Todo",
    "electronVersion": "39.2.4",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist-electron",
      "dist",
      "!dist-electron/**/*.map",
      "!dist/**/*.map"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office",
      "synopsis": "Modern Task Organization Platform",
      "description": "Ordo-Todo is a modern task organization platform built with React and Electron.",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ordo-Todo"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "publish": {
      "provider": "github",
      "owner": "tiagofur",
      "repo": "ordo-todo"
    }
  }
}
